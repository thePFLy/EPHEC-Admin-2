# Configuration MySQL
driver = mysql
connect = host=database server address dbname=database name user=database user password=database user password
default_pass_scheme = SHA512-CRYPT
user_query = SELECT '/var/mail/vhosts/%d/%n' as home, 'maildir:/var/mail/vhosts/%d/%n' as mail, 2000 AS uid, 2000 AS gid, CONCAT('*:messages=10000000:', quota) AS quota_rule FROM virtual_users WHERE email='%u';
password_query = SELECT email as user, password FROM virtual_users WHERE email='%u';
